{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2019",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"paths": {
			"@modules/*": ["./src/modules/*"],
			"@providers/*": ["./src/providers/*"],
			"@services/*": ["./src/services/*"],
			"@common/*": ["./src/common/*"],
			"@shared/*": ["./src/shared/*"]
		}
	}
}
